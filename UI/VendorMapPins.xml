<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <Button name="HousingCodexVendorPinTemplate"
            inherits="POIButtonTemplate"
            virtual="true"
            hidden="true"
            enableMouse="true"
            mixin="HousingCodexVendorPinMixin">
        <Size x="20" y="20"/>
        <Layers>
            <Layer level="ARTWORK" textureSubLevel="3">
                <Texture parentKey="HCIcon">
                    <Size x="15" y="15"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.Display"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY" textureSubLevel="5">
                <FontString parentKey="CountMaskText" inherits="GameFontNormalSmall" text="" hidden="true" justifyH="CENTER" justifyV="MIDDLE">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="RIGHT" x="-4" y="0"/>
                    </Anchors>
                    <Color r="1" g="1" b="1" a="1"/>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Button>

</Ui>
